{
  "name": "nostr-idb",
  "version": "1.1.1",
  "description": "A collection of helper methods for storing nostr events in IndexedDB",
  "author": {
    "name": "hzrd149"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hzrd149/nostr-idb.git"
  },
  "type": "module",
  "module": "dist/index.js",
  "browser": "dist/umd/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./database": {
      "import": "./dist/database/index.js",
      "types": "./dist/database/index.d.ts"
    },
    "./ws": {
      "import": "./dist/ws/index.js",
      "types": "./dist/ws/index.d.ts"
    },
    "./worker": {
      "import": "./dist/worker/index.js",
      "types": "./dist/worker/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite serve",
    "prebuild": "rm -rf dist",
    "build": "tsc && rollup -c",
    "build:examples": "vite build && cp examples/index.html public/index.html",
    "prepare": "tsc",
    "format": "prettier -w ."
  },
  "dependencies": {
    "idb": "^8.0.0",
    "nostr-tools": "^2.1.3"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@tsconfig/svelte": "^5.0.2",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "dayjs": "^1.11.10",
    "http-server": "^14.1.1",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^4.9.5",
    "svelte": "^4.2.9",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.0"
  },
  "funding": {
    "type": "lightning",
    "url": "lightning:hzrd149@getalby.com"
  }
}
