{
  "name": "nostr-idb",
  "version": "2.1.6",
  "description": "A collection of helper methods for storing nostr events in IndexedDB",
  "author": "hzrd149",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hzrd149/nostr-idb.git"
  },
  "type": "module",
  "module": "dist/index.js",
  "browser": "dist/umd/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./database": {
      "import": "./dist/database/index.js",
      "types": "./dist/database/index.d.ts"
    },
    "./ws": {
      "import": "./dist/ws/index.js",
      "types": "./dist/ws/index.d.ts"
    },
    "./ws/polyfill": {
      "import": "./dist/ws/polyfill.js",
      "types": "./dist/ws/polyfill.d.ts"
    },
    "./worker": {
      "import": "./dist/worker/index.js",
      "types": "./dist/worker/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite serve",
    "prebuild": "rm -rf dist",
    "build": "tsc && rollup -c",
    "build:examples": "vite build && cp examples/index.html public/index.html",
    "prepare": "tsc && rollup -c",
    "format": "prettier -w ."
  },
  "dependencies": {
    "debug": "^4.3.6",
    "idb": "^8.0.0",
    "nostr-tools": "^2.7.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@nostr-dev-kit/ndk": "^2.10.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "@tsconfig/svelte": "^5.0.4",
    "@types/debug": "^4.1.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "dayjs": "^1.11.12",
    "http-server": "^14.1.1",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rollup": "^4.20.0",
    "svelte": "^4.2.18",
    "tslib": "^2.6.3",
    "typescript": "^5.5.4",
    "vite": "^5.3.5"
  },
  "funding": {
    "type": "lightning",
    "url": "lightning:hzrd149@getalby.com"
  }
}
