{
  "name": "nostr-idb",
  "version": "1.1.1",
  "description": "A collection of helper methods for storing nostr events in IndexedDB",
  "author": {
    "name": "hzrd149"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hzrd149/nostr-idb.git"
  },
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./database": {
      "import": "./dist/database/index.js",
      "types": "./dist/database/index.d.ts"
    },
    "./relay": {
      "import": "./dist/relay/index.js",
      "types": "./dist/relay/index.d.ts"
    },
    "./worker": {
      "import": "./dist/worker/index.js",
      "types": "./dist/worker/index.d.ts"
    },
    "./worker/shared": {
      "import": "./dist/worker/shared.js",
      "types": "./dist/worker/shared.d.ts"
    },
    "./ws": {
      "import": "./dist/ws/index.js",
      "types": "./dist/ws/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc",
    "prepare": "tsc",
    "format": "prettier -w ."
  },
  "dependencies": {
    "idb": "^8.0.0",
    "nostr-tools": "^2.1.3"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "dayjs": "^1.11.10",
    "nanoid": "^5.0.4",
    "prettier": "^3.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.0"
  },
  "funding": {
    "type": "lightning",
    "url": "lightning:hzrd149@getalby.com"
  }
}
