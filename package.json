{
  "name": "nostr-idb",
  "version": "3.0.0",
  "description": "A collection of helper methods for storing nostr events in IndexedDB",
  "author": "hzrd149",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hzrd149/nostr-idb.git"
  },
  "type": "module",
  "module": "dist/index.js",
  "browser": "dist/umd/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./database": {
      "import": "./dist/database/index.js",
      "types": "./dist/database/index.d.ts"
    },
    "./worker": {
      "import": "./dist/worker/index.js",
      "types": "./dist/worker/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite serve",
    "prebuild": "rm -rf dist",
    "build": "tsc && node build.js",
    "build:examples": "vite build && cp examples/index.html public/index.html",
    "format": "prettier -w .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "debug": "^4.4.3",
    "idb": "^8.0.3",
    "nostr-tools": "~2.17.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@tsconfig/svelte": "^5.0.6",
    "@types/debug": "^4.1.12",
    "@types/node": "^24.10.1",
    "@vitest/ui": "^4.0.9",
    "esbuild": "^0.25.12",
    "fake-indexeddb": "^6.2.5",
    "prettier": "^3.6.2",
    "svelte": "^4.2.20",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vitest": "^4.0.9"
  },
  "funding": {
    "type": "lightning",
    "url": "lightning:hzrd149@getalby.com"
  }
}
