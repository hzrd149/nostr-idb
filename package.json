{
  "name": "nostr-idb",
  "version": "2.4.0",
  "description": "A collection of helper methods for storing nostr events in IndexedDB",
  "author": "hzrd149",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hzrd149/nostr-idb.git"
  },
  "type": "module",
  "module": "dist/index.js",
  "browser": "dist/umd/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./database": {
      "import": "./dist/database/index.js",
      "types": "./dist/database/index.d.ts"
    },
    "./worker": {
      "import": "./dist/worker/index.js",
      "types": "./dist/worker/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite serve",
    "prebuild": "rm -rf dist",
    "build": "tsc && node build.js",
    "build:examples": "vite build && cp examples/index.html public/index.html",
    "format": "prettier -w ."
  },
  "dependencies": {
    "debug": "^4.3.6",
    "idb": "^8.0.0",
    "nostr-tools": "~2.17.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "@tsconfig/svelte": "^5.0.4",
    "@types/debug": "^4.1.12",
    "esbuild": "^0.25.10",
    "prettier": "^3.3.3",
    "svelte": "^4.2.18",
    "typescript": "^5.5.4",
    "vite": "^5.3.5"
  },
  "funding": {
    "type": "lightning",
    "url": "lightning:hzrd149@getalby.com"
  },
  "packageManager": "pnpm@9.12.2"
}
