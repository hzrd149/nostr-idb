{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2022",
    "module": "NodeNext",
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "declaration": true,
    "allowImportingTsExtensions": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["example"]
}
